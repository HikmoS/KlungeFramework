{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/kloiasoft/eventapis/blob/master/spec/eventapis.command.json",
  "title": "EventApis Event",
  "description": "EventApis Event Schema",
  "type": "object",
  "properties": {
    "event": {
      "type": "string",
      "description": "Encapsulated Event see event.json"
    },
    "context": {
      "$ref": "#/definitions/Context"
    },
    "sender": {
      "type": "string",
      "description": "Sender of Event - Service Name"
    },
    "opDate": {
      "type": "integer",
      "description": "Event Send Epoch"
    },
    "userContext": {
      "type": "object",
      "description": "User Context extension to carry with events"
    }
  },
  "additionalProperties": true,
  "required": [],
  "definitions": {
    "Context": {
      "type": "object",
      "properties": {
        "opId": {
          "type": "string"
        },
        "parentOpId": {
          "type": "string"
        },
        "commandContext": {
          "type": "string"
        },
        "commandTimeout": {
          "type": "integer"
        },
        "startTime": {
          "type": "integer"
        }
      },
      "required": [
        "opId",
        "commandContext",
        "commandTimeout",
        "startTime"
      ]
    }
  }
}